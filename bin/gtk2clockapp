#!/usr/bin/env ruby
require 'rubygems'
gem 'gtk2applib', '~> 10'
require 'gtk2applib'
include Gtk2AppLib
include Configuration

program = Program.new( {
        'name'		=> 'Ruby-Gnome Clock',
        'authors'	=> ['carlosjhr64@gmail.com'],
        'website'	=> 'http://ruby-gnome-apps.blogspot.com/search/label/Clock',
        'website-label'	=> 'Ruby-Gnome Apps',
        'license'	=> 'GPL',
        'copyright'	=> '2010-12-02 12:15:45',
        } )

begin
  program.window do |window|
     window.modify_bg(Gtk::STATE_NORMAL, BACKGROUND_COLOR)
     fixed = Gtk2ClockApp::Fixed.new( window )
     Gtk.timeout_add(UPDATE_TIME){ fixed.update }
     window.show_all
  end
rescue Exception
  $!.puts_bang!
ensure
  program.finalize
end
