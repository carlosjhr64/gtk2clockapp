#!/usr/bin/env ruby
require 'gtk2clockapp'
require 'help_parser'
HelpParser[Gtk2ClockApp::VERSION, <<HELP]
Usage:
  gtk2clockapp [:options]
Options:
  -h --help
  -v --version
HELP
gui = Gtk2ClockApp.gui
gui.set_weather 'â›… Weather'
gui.set_spot 'ðŸ—  Spot'
gui.set_alert 'ðŸ“¢ Alert'
Thread.new do
  while line = $stdin.gets
    line.chomp!
    case line
    when /^Weather: (.*)$/
      gui.set_weather $1
    when /^Spot: (.*)$/
      gui.set_spot $1
    else
      gui.set_alert line
    end
  end
end
Gtk.main
